<!DOCTYPE html>
<html>
  <head>
    <title>Simple API for taking full website screenshots Â· url-capture</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <script src="/javascripts/ajax.js"></script>

  </head>
  <body>

    <div id="readme"></div>

    <a href="https://github.com/vieron/url-capture"><img style="position: absolute; top: 0; right: 0; border: 0;" src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" alt="Fork me on GitHub"></a>

    <script>
        var owner = 'vieron',
            repo = 'url-capture',
            ajax = require('ajax');

        window.onload = function() {
          ajax({
            url: 'https://api.github.com/repos/' + owner + '/' + repo + '/readme',
            headers: {
              'Accept': 'application/vnd.github.html'
            },
            success: function(data) {
              document.getElementById('readme').innerHTML = data;
            },
            error: function(data) {
                console.log("Error <b>" + data.status + "</b> occurred when trying to load Readme of Github Repo <b>" + owner + "/" + repo + "</b>.")
            }
          });
        }
    </script>

  </body>
</html>



